<Window x:Class="WartungsTool_v._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WartungsTool_v._2"
        xmlns:vm="clr-namespace:WartungsTool_v._2.ViewModel"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBackgroundBrush}"
        Title="MainWindow" Height="850" Width="1600">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Theme wechseln" Background="#2D2D3A" Foreground="LightGreen" Command="{Binding ToggleThemeCommand}" />
            <TextBlock Text="{Binding CurrentThemeName}" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
        </StackPanel>
        <!-- Restliche UI hier -->
   
    <DockPanel Margin="20">
        <!-- Header -->
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Cleaner Utility" FontSize="24" FontWeight="Bold" Foreground="#00BFFF"/>
            <TextBlock Text="Verwalten und bereinigen Sie temporäre Systempfade und den Papierkorb"
                       FontSize="14" Foreground="LightGray" Margin="0,5,0,15"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Path Management -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Zu bereinigende Pfade:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding PathsToClean}" Height="300" Background="#2D2D3A" BorderBrush="Gray">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Path}" IsChecked="{Binding IsSelected}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Pfad hinzufügen" Background="#2D2D3A" Foreground="LightGreen" Command="{Binding AddPathCommand}" Width="120"/>
                        <Button Content="Bereinigen" Background="#2D2D3A" Foreground="LightGreen" Command="{Binding CleanCommand}" Width="100"/>
                </StackPanel>

                <ProgressBar Height="20" Margin="0,20,0,0" Value="{Binding Progress}" Maximum="100" Foreground="#00BFFF" Background="#333" />
            </StackPanel>

            <!-- Output -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Bereinigte Elemente:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding DeletedItems, UpdateSourceTrigger=PropertyChanged}" Background="#2D2D3A" Foreground="LightGreen"
                         BorderBrush="Gray" FontFamily="Consolas" FontSize="12" Height="300"/>
            </StackPanel>
        </Grid>
    </DockPanel>
    </DockPanel>
</Window>
