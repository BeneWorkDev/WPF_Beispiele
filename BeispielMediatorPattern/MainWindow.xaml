<Window x:Class="BeispielMediatorPattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeispielMediatorPattern"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- ContentControl, das die Views anzeigen wird -->
        <ContentControl Name="MainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button Content="Wechsel zu View 2" Click="SwitchToView2_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="Wechsel zu View 3" Click="SwitchToView3_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
