<Window x:Class="BeispielWartungsTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeispielWartungsTool"
        xmlns:vm="clr-namespace:BeispielWartungsTool.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1600">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <DockPanel Margin="10">
        <TextBlock Text="Bereinigbare Pfade:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" DockPanel.Dock="Top"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Pfad hinzufügen" Command="{Binding AddPathCommand}" Margin="0,0,10,0" />
        </StackPanel>

        <ListBox ItemsSource="{Binding PathsToClean}" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsSelected}" Width="20"/>
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="5,0"/>
                        <TextBlock Text="{Binding Path}" Foreground="Gray" Margin="10,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Bereinigen" Command="{Binding CleanupCommand}" Height="30" DockPanel.Dock="Bottom"/>
        <Expander Header="Gelöschte Elemente" IsExpanded="True" DockPanel.Dock="Bottom" Margin="0,10,0,0">
            <ListBox ItemsSource="{Binding DeletedItems}" Height="150"/>
        </Expander>
        <Border BorderBrush="Black" BorderThickness="1" Width="270" Height="90">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <ProgressBar Grid.Column="0" Grid.Row="0" Minimum="0" Maximum="100" Height="20" Width="200" Value="{Binding Progress}" Margin="0,0,10,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                    <TextBlock Text="  |  Gelöscht: " VerticalAlignment="Center" />
                    <TextBlock Text="{Binding DeletedCount}" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </DockPanel>
</Window>
