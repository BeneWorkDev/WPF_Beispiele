<Window x:Class="BeispielIServiceProviderMVVM.View.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeispielIServiceProviderMVVM.View"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Second Window" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
        <Button Content="Say Hello" Command="{Binding SayHelloCommand}" />
    </StackPanel>
</Window>
