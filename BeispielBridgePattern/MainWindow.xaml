<Window x:Class="BeispielBridgePattern.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeispielBridgePattern"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock x:Name="TitleBlock" FontWeight="Bold" FontSize="16" />
        <TextBlock x:Name="ContentBlock" TextWrapping="Wrap" Margin="0,10,0,0" />
    </StackPanel>
</Window>
